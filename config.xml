<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "com.app.bmi"
    versionCode = "12"
    version     = "1.2" >

<!-- versionCode is optional and Android only -->

  <name>PhoneGap Example</name>

  <description>
      App per il calcolo del BMI dati in kg l'altezzza in metri, il sesso, indica come il BMI si posiziona nella tabella di riferiemento.
  </description>

  <author email="guerrero.davide@canossamilano.org">
     Davide Guerrero
  </author>
 
   <platform name="android" />
   <icon src="bmi.png" platform="android" qualifier="ldpi" />
   <icon src="bmi.png" platform="android" qualifier="mdpi" />
   <icon src="bmi.png" platform="android" qualifier="hdpi" />
   <access origin="*"/>
   <plugin name="cordova-plugin-whitelist" source="npm" />
    <allow-navigation href="*://*getskeleton.com/*" />
  </widget>
